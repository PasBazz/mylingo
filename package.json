{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean:all": "npm run clean:build && npm run clean:modules",
    "clean:build": "lerna exec -- rimraf lib",
    "clean:modules": "rimraf node_modules && lerna clean --yes",
    "bootstrap": "npm run clean:modules && npm install",
    "postinstall": "lerna bootstrap",
    "lint:css": "stylelint 'packages/**/*.ts{,x}' --fix",
    "lint:ts": "run-p -c lint:ts-*",
    "lint:ts-prod": "tslint --config tslint.prod.json 'packages/**/*.ts{,x}' --exclude '**/*.{test,story}.ts{,x}' --fix",
    "lint:ts-test": "tslint --config tslint.test.json 'packages/**/*.{test,story}.ts{,x}' --fix",
    "lint": "run-p -c lint:*",
    "prebuild": "run-p lint postinstall",
    "build": "lerna run build",
    "test": "jest --detectOpenHandles",
    "commit": "git-cz",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prerelease": "npm run build && npm test",
    "release": "lerna publish",
    "start": "lerna run start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint:ts-prod",
      "npm run lint:ts-test",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "dotenv": "^6.2.0",
    "inversify": "^5.0.1",
    "mongoose": "^5.4.2",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@storybook/addon-actions": "^4.1.3",
    "@storybook/addon-knobs": "^4.1.3",
    "@storybook/addon-links": "^4.1.3",
    "@storybook/addons": "^4.1.3",
    "@storybook/react": "^4.1.3",
    "@types/dotenv": "^6.1.0",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/mongoose": "^5.3.6",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.12",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-knobs": "^3.4.1",
    "@types/storybook__addon-links": "^3.3.3",
    "@types/storybook__react": "^4.0.0",
    "@types/styled-components": "^4.1.4",
    "@types/supertest": "^2.0.7",
    "@types/webpack-dev-server": "^3.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "commitizen": "^3.0.5",
    "connected-react-router": "^6.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "cz-lerna-changelog": "^2.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.0",
    "jest": "^23.6.0",
