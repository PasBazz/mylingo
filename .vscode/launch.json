    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug server",
            "runtimeArgs": ["-r", "ts-node/register"],
            "args": ["${workspaceFolder}/packages/server/src/index.ts"]
        },
    ]
}